{
  "name": "leadmaster-central-hub",
  "version": "1.0.0",
  "description": "Sistema modular centralizado para WhatsApp, IA y scraping multicliente",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",

    "test": "node scripts/check-test-env.js && jest --runInBand --detectOpenHandles --config jest.config.js",
    "test:unit": "jest src/modules/whatsappQrAuthorization/tests",
    "test:coverage": "jest --runInBand --config jest.config.js --coverage",

    "test:pw": "npx playwright test",
    "test:api": "npx playwright test --project=\"API Tests\"",
    "test:e2e": "npx playwright test --project=\"E2E Tests - Campaigns\"",
    "test:campaigns": "npx playwright test campaigns.e2e.spec.ts",
    "test:setup": "./scripts/setup_e2e.sh",
    "test:cleanup": "./scripts/cleanup_e2e.sh",
    "test:report": "npx playwright show-report",
    "test:debug": "npx playwright test --debug"
  },
  "dependencies": {
    "axios": "^1.7.2",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^17.3.1",
    "express": "^4.21.2",
    "googleapis": "^144.0.0",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.17.1",
    "node-cron": "^3.0.3",
    "openai": "^4.73.0",
    "qrcode": "^1.5.4",
    "whatsapp-web.js": "^1.26.0"
  },
  "devDependencies": {
    "jest": "^30.2.0",
    "jest-environment-node": "^30.2.0"
  }
}
